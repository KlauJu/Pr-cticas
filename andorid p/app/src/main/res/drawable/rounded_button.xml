<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color de fondo del botón -->
    <solid android:color="#000000" /> <!-- Fondo morado -->

    <!-- Borde del botón -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" /> <!-- Borde blanco de 2dp -->

    <!-- Esquinas redondeadas -->
    <corners android:radius="9dp" /> <!-- Radio de 16dp para las esquinas -->

    <!-- Padding interno del botón -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />
</selector>